<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp" >

    <ImageView
        android:id="@+id/img_shuffle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_shuffle_48dp" />

    <ImageView
        android:id="@+id/img_skip_prev"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_skip_previous_48dp" />

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_circle_48dp" />

    <ImageView
        android:id="@+id/img_skip_next"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_skip_next_48dp" />

    <ImageView
        android:id="@+id/img_repeat"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_repeat_48dp" />

</LinearLayout>